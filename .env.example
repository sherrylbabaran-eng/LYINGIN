# DATABASE CONFIGURATION
DB_HOST=localhost
DB_USER=root
DB_PASS=
DB_NAME=lyingin_db

# SECURITY KEYS
ENCRYPTION_KEY=change-this-to-a-strong-random-key-in-production
JWT_SECRET=change-this-too

# ENVIRONMENT
ENVIRONMENT=development

# SESSION
SESSION_LIFETIME=1800
SESSION_NAME=LYINGIN_SESSION

# RATE LIMITING
LOGIN_MAX_ATTEMPTS=5
LOGIN_TIME_WINDOW=900

# FILE UPLOADS
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads/

# EMAIL NOTIFICATIONS (Optional)
# Prefer an API (SendGrid) for reliability; otherwise configure SMTP
MAIL_FROM=noreply@lyinginclinic.com
SENDGRID_API_KEY=
MAIL_SMTP_HOST=smtp.gmail.com
MAIL_SMTP_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_SMTP_SECURE=tls  # 'ssl' or 'tls'

# LOGGING
LOG_DIR=logs/
LOG_LEVEL=info

# DEBUG MODE (Never true in production)
DEBUG=false
